    "url": "https://github.com/BrightspaceUI/link/issues"
  },
  "homepage": "https://github.com/BrightspaceUI/link",
  "devDependencies": {
    "bower": "^1.8.0",
    "eslint": "^3.19.0",
    "eslint-config-brightspace": "^0.2.4",
    "eslint-plugin-html": "^2.0.1",
    "polymer-cli": "^0.17.0"
  }
}
